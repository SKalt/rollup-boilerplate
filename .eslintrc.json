{
    "env": {
        "browser": true,
        "es6": true
    },
		"globals": {
	    "ENV": true
	  },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": ["error", "single",{
					"avoidEscape": true,
					"allowTemplateLiterals": true
				}],
        "semi": [
            "error",
            "always"
        ]
    }
}
